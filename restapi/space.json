  "paths": {
    "/spaces": {
      "get": {
        "tags": [
          "spaces"
        ],
        "summary": "Gets the list of all available spaces",
        "description": "Return spaces that the user has privileges to read. If a datasetId is passed, it will return all spaces that contains it.",
        "operationId": "getSpacesList",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "dataset",
            "in": "query",
            "description": "Dataset Id",
            "required": false,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Space"
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "spaces"
        ],
        "summary": "Ingest space object as json",
        "description": "",
        "operationId": "ingestSpace",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "space",
            "in": "formData",
            "description": "JSON representing an input space",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Space"
            }
          }
        }
      }
    },
    "/spaces/{id}": {
      "get": {
        "tags": [
          "spaces"
        ],
        "summary": "Gets a space.",
        "description": "",
        "operationId": "getSpaceById",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "description": "Space id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Space"
            }
          }
        }
      },
      "put": {
        "tags": [
          "spaces"
        ],
        "summary": "Updates a space.",
        "description": "",
        "operationId": "updateSpace",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "description": "SpaceOld Id from data service",
            "required": true,
            "type": "string"
          },
          {
            "name": "space",
            "in": "formData",
            "description": "JSON representing an input space",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Space"
            }
          }
        }
      }
