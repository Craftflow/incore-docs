      "post": {
        "tags": [
          "spaces"
        ],
        "summary": "Grants new privileges to a space",
        "description": "",
        "operationId": "grantPrivilegesToSpace",
        "consumes": [
          "multipart/form-data"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "description": "SpaceOld Id from data service",
            "required": true,
            "type": "string"
          },
          {
            "name": "grant",
            "in": "formData",
            "description": "JSON representing a privilege block",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Space"
            }
          }
        }
      }
    },
    "/spaces/{id}/datasets/{datasetId}": {
      "post": {
        "tags": [
          "spaces"
        ],
        "summary": "Adds a dataset to a space",
        "description": "",
        "operationId": "addDatasetsToSpace",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "X-Credential-Username",
            "in": "header",
            "required": false,
            "type": "string"
          },
          {
            "name": "id",
            "in": "path",
            "description": "SpaceOld Id from data service",
            "required": true,
            "type": "string"
          },
          {
            "name": "datasetId",
            "in": "path",
            "description": "Dataset Id from data service",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Space"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Privileges": {
      "type": "object",
      "properties": {
        "userPrivileges": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "READ",
              "WRITE",
              "ADMIN"
            ]
          }
        },
        "groupPrivileges": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": [
              "READ",
              "WRITE",
              "ADMIN"
            ]
          }
        }
      }
    },
    "Space": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "privileges": {
          "$ref": "#/definitions/Privileges"
        },
        "members": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "name": {
          "type": "string"
        },
        "metadata": {
          "$ref": "#/definitions/SpaceMetadata"
        }
      }
    },
    "SpaceMetadata": {
      "type": "object",
